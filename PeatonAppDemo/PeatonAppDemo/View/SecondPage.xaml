<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="PeatonAppDemo.SecondPage"
	BackgroundImage="background2">
	<ContentPage.Content>
		<StackLayout
			VerticalOptions="EndAndExpand">

			<StackLayout
				BackgroundColor="Transparent"
				Orientation="Horizontal"
				HorizontalOptions="CenterAndExpand"
				Margin="40,0,40,0">
				<Button Text="Back" TextColor="White" BackgroundColor="{StaticResource BotonColor}" BorderRadius="20" WidthRequest="200" 
						HeightRequest="40" x:Name="BackButtonThree"></Button>

			</StackLayout>
			<StackLayout
				HorizontalOptions="Center">
				<Button  BackgroundColor="Transparent" TextColor="White" x:Name="BackButtonOne" Image="boton" Text="Back"></Button>
			</StackLayout>

			<StackLayout
				HeightRequest="60"
				HorizontalOptions="FillAndExpand"
				Margin="40,0,40,0">
				<Button  HorizontalOptions="FillAndExpand" BackgroundColor="Transparent" TextColor="White" x:Name="BackButtonTwo" Image="boton" Text="Back" HeightRequest="60" ></Button>
			</StackLayout>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
